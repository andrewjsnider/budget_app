%div{ class: "max-w-3xl mx-auto px-6 py-10 text-stone-900" }
  %h1{ class: "text-3xl font-semibold" } Reconciliation
  %p{ class: "mt-2 text-stone-700" }= @account.name
  %div{ class: "mt-6 border border-stone-200 p-4" }
    %div Starts: #{@reconciliation.starts_on}
    %div Ends: #{@reconciliation.ends_on}
    %div Statement ending balance: #{number_to_currency(@reconciliation.statement_ending_balance_cents / 100.0)}
    %div Reconciled at: #{@reconciliation.reconciled_at || "not reconciled"}
