%div{ class: "max-w-5xl mx-auto px-6 py-10 text-stone-900" }
  %div{ class: "flex items-end justify-between gap-6" }
    %div
      %h1{ class: "text-3xl font-semibold" } Accounts
      %p{ class: "mt-2 text-stone-700" } Active accounts only.
    = link_to "New account", new_account_path, class: "border border-stone-900 px-4 py-2 text-sm hover:bg-stone-900 hover:text-white"

  %div{ class: "mt-6 border border-stone-200" }
    %table{ class: "w-full text-sm" }
      %thead
        %tr{ class: "border-b border-stone-200" }
          %th{ class: "p-3 text-left" } Name
          %th{ class: "p-3 text-left" } Kind
          %th{ class: "p-3 text-right" } Actions
      %tbody
        - @accounts.each do |account|
          %tr{ class: "border-t border-stone-200" }
            %td{ class: "p-3" }= account.name
            %td{ class: "p-3 text-stone-700" }= account.kind
            %td{ class: "p-3 text-right" }
              = link_to "View", account_path(account), class: "text-sm underline"
