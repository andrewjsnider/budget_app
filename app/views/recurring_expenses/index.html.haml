%div{ class: "max-w-6xl mx-auto px-6 py-10 text-stone-900" }
  %div{ class: "flex items-center justify-between" }
    %h1{ class: "text-3xl font-semibold" } Recurring expenses
    = link_to "New", new_recurring_expense_path, class: "border border-stone-900 px-4 py-2 text-sm hover:bg-stone-900 hover:text-white"

  %div{ class: "mt-6 border border-stone-200" }
    %table{ class: "w-full text-sm" }
      %thead
        %tr{ class: "border-b border-stone-200" }
          %th{ class: "p-3 text-left" } Name
          %th{ class: "p-3 text-left" } Category
          %th{ class: "p-3 text-left" } Account
          %th{ class: "p-3 text-left" } Cadence
          %th{ class: "p-3 text-right" } Amount
          %th{ class: "p-3 text-right" }
      %tbody
        - @recurring_expenses.each do |r|
          %tr{ class: "border-t border-stone-200" }
            %td{ class: "p-3" }= r.name
            %td{ class: "p-3" }= r.category&.name
            %td{ class: "p-3" }= r.account&.name
            %td{ class: "p-3" }= r.cadence
            %td{ class: "p-3 text-right" }= number_to_currency(r.estimated_amount_cents.to_i / 100.0)
            %td{ class: "p-3 text-right" }= link_to "Edit", edit_recurring_expense_path(r), class: "text-sm underline"
